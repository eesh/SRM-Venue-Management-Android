<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_gradient_bg">


        <TextView
            android:id="@+id/locationStaticTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="24dp"
            android:text="Location:"
            android:textColor="@color/md_white_1000"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/nameStaticTV"
            app:layout_constraintTop_toBottomOf="@+id/nameStaticTV" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/nameET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:hint="Mini Hall - 3"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/md_white_1000"
            android:textColorHint="@color/md_grey_300"
            app:backgroundTint="@color/md_white_1000"
            app:layout_constraintBottom_toBottomOf="@+id/nameStaticTV"
            app:layout_constraintLeft_toRightOf="@+id/nameStaticTV"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameStaticTV" />

        <Button
            android:id="@+id/addVenueButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:padding="0dp"
            android:text="Add Venue"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:text="New \nVenue"
            android:textColor="@color/md_white_1000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameStaticTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Name:"
            android:textColor="@color/md_white_1000"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTV" />

        <TextView
            android:id="@+id/capacityStaticTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="24dp"
            android:text="Capacity:"
            android:textColor="@color/md_white_1000"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/locationStaticTV"
            app:layout_constraintTop_toBottomOf="@+id/locationStaticTV" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/locationET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="TP Ganesan Auditorium"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/md_white_1000"
            android:textColorHint="@color/md_grey_300"
            android:textCursorDrawable="@null"
            app:backgroundTint="@color/md_white_1000"
            app:layout_constraintBottom_toBottomOf="@+id/locationStaticTV"
            app:layout_constraintLeft_toRightOf="@+id/locationStaticTV"
            app:layout_constraintTop_toTopOf="@+id/locationStaticTV"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/capacityET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="200"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/md_white_1000"
            android:textColorHint="@color/md_grey_300"
            android:textCursorDrawable="@null"
            app:backgroundTint="@color/md_white_1000"
            app:layout_constraintBottom_toBottomOf="@+id/capacityStaticTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/locationET"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/capacityStaticTV"
            app:layout_constraintVertical_bias="0.071" />

        <TextView
            android:id="@+id/mapStaticTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="32dp"
            android:text="Map:"
            android:textColor="@color/md_white_1000"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/capacityStaticTV"
            app:layout_constraintTop_toBottomOf="@+id/capacityStaticTV" />

        <Button
            android:id="@+id/mapMarkerButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Set marker"
            app:backgroundTint="@color/md_blue_500"
            app:layout_constraintBottom_toBottomOf="@+id/mapStaticTV"
            app:layout_constraintLeft_toRightOf="@+id/mapStaticTV"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mapStaticTV" />

    </android.support.constraint.ConstraintLayout>
</layout>